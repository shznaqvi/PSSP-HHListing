<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.aku.hassannaqvi.kmc_hhlisting">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name="edu.aku.hassannaqvi.kmc_hhlisting.core.AppMain"
        android:allowBackup="true"
        android:icon="@mipmap/icon_linelisting"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.ui.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.ui.HouseholdListingActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.ui.AddChildActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.ui.setupActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.ui.FamilyListingActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.core.AndroidDatabaseManager"
            android:theme="@style/android:Theme.Holo.Light.DarkActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.ui.SplashScreen"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.ui.LoginActivity"
            android:theme="@style/Theme.AppCompat"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.ui.AddMarriedWomenActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="edu.aku.hassannaqvi.kmc_hhlisting.ui.HouseholdInfoActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>