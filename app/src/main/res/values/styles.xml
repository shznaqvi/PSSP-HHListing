<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:textViewStyle">@style/lblTextView</item>
        <item name="android:editTextStyle">@style/txtEditText</item>
        <item name="android:radioButtonStyle">@style/btnRadioButton</item>
        <item name="android:checkboxStyle">@style/chkBox</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:typeface">serif</item>
        <item name="android:buttonStyle">@style/btnButton</item>


    </style>

    <style name="BackgroundStyle" parent="android:Widget.Holo.Light.ScrollView">
        <item name="android:padding">24dp</item>
    </style>

    <style name="lblTextView" parent="android:Widget.Holo.Light.TextView">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">24sp</item> <!--or 16sp-->
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="txtEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">24sp</item> <!--or 16sp-->
        <item name="android:background">#d6d6d6</item>

    </style>


    <style name="btnRadioButton" parent="android:Widget.Holo.Light.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">4dp</item>

    </style>

    <style name="chkBox" parent="android:Widget.Holo.Light.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">4dp</item>

    </style>

    <style name="btnButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/btn_grad</item>


    </style>

    <style name="editText" parent="android:Widget.EditText">
        <item name="android:src">#efefef</item>
    </style>

</resources>
