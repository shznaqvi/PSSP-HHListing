<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_household_listing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.aku.hassannaqvi.willows_hhlisting.Activities.ClusterListingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtFamilyListing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="#d6d6d6"
            android:text="Family Listing"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:text="@string/hh08" />

            <EditText
                android:id="@+id/hh08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="@string/hh08"
                android:inputType="text"
                android:maxLength="24" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:text="@string/hh13" />

        <RadioGroup
            android:id="@+id/hh13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/hh13a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:text="@string/yes" />

            <RadioButton
                android:id="@+id/hh13b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:text="@string/no" />

        </RadioGroup>


        <LinearLayout
            android:id="@+id/fldGrpHH09"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/hh11" />

            <RadioGroup
                android:id="@+id/hh11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/hh11a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh11a" />

                <RadioButton
                    android:id="@+id/hh11b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh11b" />

                <RadioButton
                    android:id="@+id/hh11c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh11c" />

                <RadioButton
                    android:id="@+id/hh11d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh11d" />

                <RadioButton
                    android:id="@+id/hh11e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh11e" />

                <RadioButton
                    android:id="@+id/hh11f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh11f" />

                <RadioButton
                    android:id="@+id/hh11g"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh11g" />

                <RadioButton
                    android:id="@+id/hh11h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh11h" />

                <RadioButton
                    android:id="@+id/hh1188"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hhother" />

                <EditText
                    android:id="@+id/hh1188x"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hhother"
                    android:maxLength="40"
                    android:visibility="gone"/>

                <RadioButton
                    android:id="@+id/hh1199"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hh1199" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="60"
                    android:text="@string/hh09" />

                <EditText
                    android:id="@+id/hh09"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="30"
                    android:digits="1234567890"
                    android:hint="@string/hh09a"
                    android:inputType="number"
                    android:maxLength="2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="60"
                    android:text="@string/hh10" />

                <EditText
                    android:id="@+id/hh10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="30"
                    android:digits="1234567890"
                    android:hint="@string/hh09a"
                    android:inputType="number"
                    android:maxLength="2" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="60"
                    android:text="@string/hh12" />

                <!--<Switch
                    android:id="@+id/hh11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="4"
                    android:textOff="@string/no"
                    android:enabled="false"
                    android:textOn="@string/yes" />-->

                <EditText
                    android:id="@+id/hh12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="30"
                    android:digits="1234567890"
                    android:hint="@string/hh12a"
                    android:inputType="number"
                    android:maxLength="2" />

            </LinearLayout>


            <Button
                android:id="@+id/btnAddWomen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Add A MWRA"
                android:visibility="gone" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAddFamily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Add Next Family"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnAddHousehold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Goto Next Household"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>