        <Button
            android:id="@+id/btnContNextQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:onClick="contNextQuestion"
            android:text="Continue to Next Question"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnAddMWRA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
