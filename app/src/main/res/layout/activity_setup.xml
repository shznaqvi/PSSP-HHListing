<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_household_listing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context="edu.aku.hassannaqvi.kmc2_hhl_validation.Activities.HouseholdListingActivity">

    <TextView
        android:id="@+id/villageName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:padding="13sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="#d6d6d6"
                    android:padding="6dp"
                    android:text="@string/hh02" />

                <EditText
                    android:id="@+id/hh02"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:digits="1234567890"
                    android:inputType="number"
                    android:maxLength="9" />

                <!--Structure No. (Auto-Generate)-->


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/hh03" />

                <TextView
                    android:id="@+id/hh03"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_weight="3"
                    android:background="#d6d6d6"
                    android:padding="6dp"
                    android:text="@string/hh03"
                    android:textSize="48dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!--// Structure Type-->

            <TextView
                style="@style/textView"
                android:layout_marginTop="24dp"
                android:text="@string/hh04" />

            <RadioGroup
                android:id="@+id/hh04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/hh04a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hh04a" />

                <RadioButton
                    android:id="@+id/hh04b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hh04b" />

                <!--<RadioButton
                    android:id="@+id/hh04c"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hh04c" />

                <RadioButton
                    android:id="@+id/hh04d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hh04d" />

                <RadioButton
                    android:id="@+id/hh04e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hh04e" />

                <RadioButton
                    android:id="@+id/hh04f"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hh04f" />-->

                <RadioButton
                    android:id="@+id/hh04g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hh04g" />

                <!--<RadioButton
                    android:id="@+id/hh04x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/hh04x" />-->

            </RadioGroup>

            <!--<EditText
                android:id="@+id/hh04x88"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:digits="@string/txtMsg"
                android:hint="@string/hh04x" />-->

            <LinearLayout
                android:id="@+id/fldGrpHH04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Are there more than one Families?-->
                    <TextView
                        style="@style/textView"
                        android:layout_marginTop="24dp"
                        android:text="@string/hh05" />

                    <!--<Switch
                        android:id="@+id/hh05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_weight="1"
                        android:textOff="@string/no"
                        android:textOn="@string/yes" />-->

                    <RadioGroup
                        android:id="@+id/hh05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/hh05a"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/hh05b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="@string/no" />

                    </RadioGroup>

                    <!--How many Families?-->
                    <EditText
                        android:id="@+id/hh06"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/hh06"
                        android:inputType="number"
                        android:maxLength="2"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/hh07"
                    style="@style/textView"
                    android:layout_marginTop="24dp"
                    android:text="@string/hh07"
                    android:typeface="serif" />

                <Button
                    android:id="@+id/btnAddPregnancy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Add A Family" />
            </LinearLayout>

            <!--Family Letter-->

            <Button
                android:id="@+id/btnAddHousehold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Goto Next Household"
                android:visibility="visible" />

            <Button
                android:id="@+id/btnChangePSU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Change Area"
                android:visibility="gone" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
